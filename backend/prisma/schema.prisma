// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Session {
  id          String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  title       String   @db.VarChar(255)
  status      SessionStatus @default(DRAFT)
  hostId      String   @map("host_id") @db.VarChar(255)
  guestToken  String?  @map("guest_token") @db.VarChar(255)
  createdAt   DateTime @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt   DateTime @default(now()) @updatedAt @map("updated_at") @db.Timestamptz(6)
  
  // Relations
  tracks        Track[]
  uploadTargets UploadTarget[]

  @@map("sessions")
  @@index([hostId], map: "idx_sessions_host_id")
  @@index([status], map: "idx_sessions_status")
}

model Track {
  id          String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  sessionId   String   @map("session_id") @db.Uuid
  userId      String   @map("user_id") @db.VarChar(255)
  kind        TrackKind
  objectKey   String   @map("object_key") @db.VarChar(500)
  createdAt   DateTime @default(now()) @map("created_at") @db.Timestamptz(6)
  completedAt DateTime? @map("completed_at") @db.Timestamptz(6)
  parts       Json     @default("[]") @db.JsonB
  
  // Relations
  session Session @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  @@map("tracks")
  @@index([sessionId], map: "idx_tracks_session_id")
  @@index([userId], map: "idx_tracks_user_id")
}

model UploadTarget {
  id        String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  sessionId String   @map("session_id") @db.Uuid
  uploadId  String   @map("upload_id") @db.VarChar(255)
  key       String   @db.VarChar(500)
  bucket    String   @db.VarChar(255)
  provider  StorageProvider
  expiresAt DateTime @map("expires_at") @db.Timestamptz(6)
  createdAt DateTime @default(now()) @map("created_at") @db.Timestamptz(6)
  
  // Relations
  session Session @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  @@map("upload_targets")
  @@index([sessionId], map: "idx_upload_targets_session_id")
}

enum SessionStatus {
  DRAFT
  LIVE
  UPLOADING
  COMPLETE

  @@map("session_status")
}

enum TrackKind {
  AUDIO
  VIDEO

  @@map("track_kind")
}

enum StorageProvider {
  S3
  R2
  LOCAL

  @@map("storage_provider")
}
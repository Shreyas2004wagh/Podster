{
  "name": "podster",
  "version": "0.1.0",
  "private": true,
  "description": "Monorepo for Podster remote podcast recording MVP",
  "scripts": {
    "dev": "pnpm -C shared build && pnpm --recursive --parallel dev",
    "build": "pnpm --recursive build",
    "lint": "pnpm --recursive lint",
    "format": "pnpm --recursive format",
    "typecheck": "pnpm --recursive typecheck"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2"
  },
  "pnpm": {
    "packageManager": "pnpm@10",
    "workspaces": [
      "shared",
      "backend",
      "frontend"
    ]
  }
}
